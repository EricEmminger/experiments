<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Guid</th>
      <th>External url</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Updated</th>
      <th>Published</th>
      <th>Content html</th>
      <th>Content text</th>
      <th>Authors</th>
      <th>Tags</th>
      <th>Attachments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.guid %></td>
        <td><%= item.external_url %></td>
        <td><%= item.title %></td>
        <td><%= item.summary %></td>
        <td><%= item.updated %></td>
        <td><%= item.published %></td>
        <td><%= item.content_html %></td>
        <td><%= item.content_text %></td>
        <td><%= item.authors %></td>
        <td><%= item.tags %></td>
        <td><%= item.attachments %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
